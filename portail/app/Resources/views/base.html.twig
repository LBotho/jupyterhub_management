<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>{% block title %}Portail de gestion des MOOC{% endblock %}</title>
    <link rel="icon" type="image/png" href="{{ asset('images/favicon.png') }}" />
    {% block stylesheets %}
        <!-- Bootstrap Core CSS -->
        <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet" type="text/css">
        <!-- Custom CSS -->
        <link href="{{ asset('css/sb-admin.css') }}" rel="stylesheet" type="text/css">
        <link href="{{ asset('css/style.css') }}" rel="stylesheet" type="text/css">
        <!-- Morris Charts CSS -->
        <link href="{{ asset('css/plugins/morris.css') }}" rel="stylesheet" type="text/css">
        <!-- Custom Fonts -->
        <link href="{{ asset('font-awesome/css/font-awesome.min.css') }}" rel="stylesheet" type="text/css">
    {% endblock %}
</head>

<body>
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('dashboard') }}">Portail de gestion des MOOC</a>
            </div>

            <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav side-nav">
                    <li class="{% if app.request.attributes.get('_route') == 'dashboard' %}active{% endif %}">
                        <a href="{{ path('dashboard') }}"><i class="fa fa-fw fa-dashboard"></i> Tableau de bord</a>
                    </li>
                    <li class="{% if app.request.attributes.get('_route') == 'users' %}active{% endif %}">
                        <a href="{{ path('users') }}"><i class="fa fa-fw fa-user-circle-o"></i> Gestion des utilisateurs</a>
                    </li>
                    <li class="{% if app.request.attributes.get('_route') == 'notebooks' %}active{% endif %}">
                        <a href="{{ path('notebooks') }}"><i class="fa fa-fw fa-files-o"></i> Gestion des notebooks</a>
                    </li>
                    <li class="{% if app.request.attributes.get('_route') == 'nbgrader' %}active{% endif %}">
                        <a href="{{ path('nbgrader') }}"><i class="fa fa-fw fa-bar-chart-o"></i> Gestion des devoirs</a>
                    </li>
                    <li>
                        <a href="{{ path('dashboard') }}"><i class="fa fa-fw fa-pie-chart"></i> Analyse</a>
                    </li>
                    <li>
                        <a href="http://jupyterhub.p4ul.tk/" target="_blank"><img src="{{ asset('images/jhubFavicon.png') }}" alt="jhubFavicon"> Accéder à JupyterHub</a>
                    </li>
                    <li>
                      <img id="logo_isen" alt="logo isen" src="{{ asset('images/isen_logo.jpg') }}">
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </nav>

        <div id="page-wrapper">
            {% for type, flashes in app.session.flashbag.all %}
                {% for flash in flashes %}
                    <div class="alert alert-{{ type }} fade in">
                        {% if type == 'success' %}
                            <i class="fa fa-check" aria-hidden="true"></i>
                        {% elseif type == 'danger' %}
                            <i class="fa fa-remove" aria-hidden="true"></i>
                        {% endif %}
                        {{ flash }}
                    </div>
                {% endfor %}
            {% endfor %}
            <div class="container-fluid">
                    {% block body %}{% endblock %}
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->
    </div>
    <!-- /#wrapper -->

    {% block javascripts %}
        <!-- jQuery -->
        <script src="{{ asset('js/jquery-3.1.1.min.js') }}"></script>
        <!-- Bootstrap Core JavaScript -->
        <script src="{{ asset('js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('js/liveSearch.js') }}"></script>
        <script src="{{ asset('js/restoreSelectedTab.js') }}"></script>
        <script src="{{ asset('js/function.js') }}"></script>
        <!-- jQuery Form Validation Plugin -->
        <script src="{{ asset('js/jquery.validate.min.js') }}"></script>
        <script src="{{ asset('js/additional-methods.js') }}"></script>
        <script src="{{ asset('js/formValidation.js') }}"></script>
    {% endblock %}
</body>
</html>
